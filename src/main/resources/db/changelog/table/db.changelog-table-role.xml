<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet author="artemenko_pa" id="ROLE-001">
        <createSequence schemaName="REPOSITORY" sequenceName="ROLE_SEQ"/>
    </changeSet>


    <changeSet author="artemenko_pa" id="ROLE-002">
        <createTable schemaName="REPOSITORY" tableName="ROLE">
            <column name="ROLE_ID" type="SMALLINT" defaultValueSequenceNext="ROLE_SEQ">
                <constraints primaryKey="true" primaryKeyName="ROLE_PK"/>
            </column>
            <column name="PARENT_ID" type="SMALLINT"/>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>


</databaseChangeLog>