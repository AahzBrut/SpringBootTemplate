<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet author="artemenko_pa" id="USER-001">
        <createSequence schemaName="REPOSITORY" sequenceName="USER_SEQ"/>
    </changeSet>


    <changeSet author="artemenko_pa" id="USER-002">
        <createTable schemaName="REPOSITORY" tableName="USER">
            <column name="USER_ID" type="INT" defaultValueSequenceNext="USER_SEQ">
                <constraints primaryKey="true" primaryKeyName="USER_PK"/>
            </column>
            <column name="NAME" type="VARCHAR(255)"/>
            <column name="FIRST_NAME" type="VARCHAR(255)"/>
            <column name="PATRONYMIC" type="VARCHAR(255)"/>
            <column name="LAST_NAME" type="VARCHAR(255)"/>
            <column name="EMAIL" type="VARCHAR(255)"/>
            <column name="DESCRIPTION" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>


</databaseChangeLog>